<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brique">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level1_string"
        android:id="@+id/level1Button"
        android:layout_above="@+id/level2Button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level2_string"
        android:id="@+id/level2Button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/level1Button"
        android:layout_alignStart="@+id/level1Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level3_string"
        android:id="@+id/level3Button"
        android:layout_below="@+id/level2Button"
        android:layout_alignLeft="@+id/level2Button"
        android:layout_alignStart="@+id/level2Button"
        android:layout_marginTop="30dp" />

</RelativeLayout>